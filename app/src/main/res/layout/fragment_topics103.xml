<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="myfirstapp.example.com.myfirstapp.topics103$PlaceholderFragment"
    >
    <!--android:id="@+id/"-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bookshelf"
        android:scaleType="fitEnd"
        />

    <Button
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="wrap_content"
        android:text="Introduction"
        android:id="@+id/btn_intro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#00AA71"
        android:layout_marginBottom="5dp"
        android:onClick="goToIntro"/>

    <Button
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="wrap_content"
        android:text="Operating System Structures"
        android:id="@+id/btn_OsStruct"
        android:layout_below="@+id/btn_intro"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="#00AA71"
        android:onClick="goToOs"/>

    <Button
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="wrap_content"
        android:text="Processes"
        android:id="@+id/btn_process"
        android:layout_below="@+id/btn_OsStruct"
        android:layout_centerHorizontal="true"
        android:background="#00AA71"
        android:layout_marginBottom="5dp"
        android:onClick="goToProcesses"/>

</RelativeLayout>
